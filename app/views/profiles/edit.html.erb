<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h2 class = "mt-5 mb-4">プロフィール編集</h2>
      <%= form_with model: @user, url: profile_path, local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
        <div class="form-group">
          <%= f.label :email, class: 'font-weight-bold' %>
          <%= f.email_field :email, placeholder: "sample@exaple.com", class: 'form-control' %>
        </div>
        <div class="form-group">
        <%= f.label '面接シーンを選択してください', class: 'font-weight-bold' %>
          <div class="custom-radio">
            <%= f.radio_button  :category_id, 1 %>
            <%= f.label :category_id, '新卒',value: 1 %>
          </div>
          <div class="custom-radio">
            <%= f.radio_button  :category_id, 2 %>
            <%= f.label :category_id, '転職',value: 2 %>
          </div>
          <div class="custom-radio">
            <%= f.radio_button  :category_id, 3 %>
            <%= f.label :category_id, 'エンジニア',value: 3 %>
          </div>
        </div>
        <%= f.submit '登録する', class: 'btn btn-lg bg text-white w-100 mt-3' %>
      <% end %>
    </div>
  </div>
</div>
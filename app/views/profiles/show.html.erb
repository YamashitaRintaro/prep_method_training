<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="mb-5 mt-5">プロフィール</h1>
      <table class="table">
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:email)) %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <th scope="row">面接シーン</th>
          <% if current_user.category_id.present? %>
            <td><%= @category %></td>
          <% else %>
            <td>未設定</td>
          <% end %>
        </tr>
      </table>
      <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-lg bg text-white mt-3' %>
    </div>
  </div>
</div>
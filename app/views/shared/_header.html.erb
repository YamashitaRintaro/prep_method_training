<header>
  <div class="container">
    <div class="header_left">
      <%= link_to root_path do %>
        <%= image_tag "logo.png" %>
      <% end %>
    </div>
    <div class="ml-5">
      <%= link_to questions_path do %>
      <i class="fas fa-microphone"></i>
      練習する
      <% end %>
    </div>
    <div class="ml-4">
    <% if current_user.category_id.present? %>  
      <%= link_to category_path(current_user.category_id) do %>
      <i class="fas fa-pencil-alt"></i>
      振り返る
      <% end %>
    <% end %>
    </div>
    <div class="header_right">
      <div class="header-icon-container">
        <div class="header-icon">
        <%= link_to questions_path do %>
          <%= image_tag "training.png", class: "img-fluid" %>
        <% end %>
        </div>
        <div class="header-icon">
        <% if current_user.category_id.present? %>
          <%= link_to category_path(current_user.category_id) do %>
            <%= image_tag "review.png", class: "img-fluid" %>
          <% end %>
        <% end %>
        </div>
      </div>
      <div class="dropdown">
        <div class="dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
          <%= image_tag "mypage.png", class: "img-fluid" %>
        </div>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
          <%= link_to 'プロフィール', profile_path, class: "dropdown-item"%>
          <%= link_to 'ログアウト', logout_path, method: :delete, class: "dropdown-item"%>
        </div>
      </div>
    </div>
    </div>
  </div>
</header> 
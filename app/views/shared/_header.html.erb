<header>
  <div class="container">
    <div class="header_left">
      <%= link_to root_path do %>
        <%= image_tag "logo.png" %>
      <% end %>
    </div>
    <div class="ml-5">
      <% if current_user.category_id == 1 %>
      <i class="fas fa-microphone"></i>
        <%= link_to "練習する", new_graduate_trainings_path %>
      <% elsif current_user.category_id == 2 %>
        <%= link_to "練習する", job_change_trainings_path %>
      <% else %>
        <%= link_to "練習する", engineer_trainings_path %>
      <% end %>
    </div>
    <div class="ml-4">
      <i class="fas fa-pencil-alt"></i>
      <% if current_user.category_id == 1 %>
        <%= link_to "振り返る", category_path(1) %>
      <% elsif current_user.category_id == 2 %>
        <%= link_to "振り返る", category_path(2) %>
      <% else %>
        <%= link_to "振り返る", category_path(3) %>
      <% end %>
    </div>
    <div class="header_right">
      <div class="dropdown">
        <div class="dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
          <%= image_tag "mypage.png", class: "img-fluid" %>
        </div>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="#">プロフィール</a>
          <%= link_to 'ログアウト', logout_path, method: :delete, class: "dropdown-item"%>
        </div>
      </div>
    </div>
    </div>
  </div>
</header> 
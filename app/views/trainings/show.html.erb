<div class="container">
  <section class="main-controls">
    <%= image_tag "interviewer.png", class: "img-fluid" %>

  <div class="text-center">
    <h2><%= @question_title %></h2>
  </div>

    <div id="buttons">
      <button class="record btn btn-info">録音スタート</button>
      <button class="stop btn btn-warning">次へ</button>
    </div>
    <%= audio_tag(@question_voice_data, id: "question-voice") %>
    <div class="sound-clips"></div>
    <%= form_with model: @voice, url: training_voices_path(@training), id: "voiceform", local: true do |f| %>
      <%= f.hidden_field :training_id,value: @training.id %>
      <%= f.hidden_field :phase %>
      <%= f.hidden_field :voice_data  %>
    <% end %>
  </section>

</div>
<%= javascript_pack_tag 'app' %>

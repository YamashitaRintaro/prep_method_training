<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h2 class = "mt-5 mb-4 font-weight-bold">ログイン</h2>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :email, User.human_attribute_name(:email), class: 'font-weight-bold' %>
          <%= f.text_field :email, placeholder: "sample@exaple.com", class: 'form-control form-control-lg' %>
        </div>
        <div class="form-group">
          <%= f.label :password, User.human_attribute_name(:password), class: 'font-weight-bold' %>
          <%= f.password_field :password, placeholder: "password", class: 'form-control form-control-lg' %>
        </div>
        <%= link_to 'パスワードをお忘れの方はこちら', new_password_reset_path, class: 'mt-3 font-min' %>
        <div class="actions">
          <%= f.submit 'ログイン', class: 'btn btn-lg bg text-white w-100 mt-3' %>
        </div>
      <% end %>
      <div class="text-center mt-3 font-min">または</div>
      <div class="sns-form mt-3">
        <%= link_to auth_at_provider_path(provider: :twitter), class: "twitter" do %>
          <i class="fa-brands fa-twitter"></i>
          Twitterアカウントでログイン
        <% end %>
        <%= link_to auth_at_provider_path(provider: :google), class: "google" do %>
          <div class="google-img">
            <%= image_tag "google.png", class: "img-fluid"  %>
          </div>
          Googleアカウントでログイン
        <% end %>
      </div>
    </div>
  </div>
</div>